/**/
/* Welcome Page */
/**/

QWidget#content {
    background-color: #FFFFFF;
    border: 1px solid #c5c5c5;
    border-radius: 10px;
}

QPushButton#button1 {
    font-size: 16px;
    padding: 12px 24px;
    font-family: Inter;
    font-weight: bold;
    color: #ffffff;
    background-color: {{accent}};
    border-radius: 5px;
}

QPushButton:hover#button1 {
    background-color: {{accent_hover}};
}

QLabel#title {
    font-size: 24px;
    font-weight: bold;
    font-family: Inter;
    color: #000000
}

QLabel#text1 {
    font-size: 16px;
    font-family: Inter;
    color: #555;
}





/**/
/* User Info Page */
/**/

QPushButton#selectLogoButton {
    font-size: 14px;
    padding: 10px 18px;
    font-family: Inter;
    background-color: #f0f0f0;
    border-radius: 4px;
    color: #333;
    border: 1px solid #ccc;
}

QPushButton#selectLogoButton:hover {
    background-color: #e0e0e0;
}

QLineEdit#inputField {
    font-size: 14px;
    padding: 10px;
    font-family: Inter;
    border: 1px solid #ccc;
    border-radius: 4px;
    background-color: #ffffff;
    color: #000000;
}

QPushButton#wizardNextButton {
    font-size: 16px;
    padding: 12px 24px;
    font-family: Inter;
    font-weight: bold;
    color: #ffffff;
    background-color: {{accent}};
    border-radius: 5px;
}

QPushButton:hover#wizardNextButton {
    background-color: {{accent_hover}};
}

QLabel#logoPreview {
    border-radius: 50px;
    background-color: #f9f9f9;
}